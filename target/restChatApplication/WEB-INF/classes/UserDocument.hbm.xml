<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
  <class name="UserEntity" table="UserEntity">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="userId" type="long" column="userId">
         
      </id>
      <property name="userName" column="userName" type="string"/>
      <property name="email" column="email" type="string"/>
      <property name="createdDate" column="createdDate" type="string"/>
   </class>
   <class name="ChatRoomDocument" table="ChatRoomDocument">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="roomId" type="long" column="roomId">
         
      </id>
      <property name="roomName" column="roomName" type="string"/>
      
   </class>
    <class name="MessageDocument" table="MessageDocument">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="id" type="long" column="id">
         
      </id>
      <property name="messageContent" column="messageContent" type="string"/>
      
   </class>
</hibernate-mapping>

